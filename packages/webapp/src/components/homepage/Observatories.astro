import { Icon } from 'astro-icon/components';

// Recebemos a lista completa de ferramentas da página principal
const { tools } = Astro.props;

// --- A LÓGICA DA ALTERAÇÃO ESTÁ AQUI ---
// Filtramos a lista para obter apenas os observatórios
const observatorios = tools.filter(tool => tool.titulo.includes('Observatório'));
---

<section id="observatorios" class="bg-white dark:bg-gray-900/40 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-14">
            <h2 class="text-4xl font-bold text-gray-900 dark:text-white">Observatórios de Mercado</h2>
            <p class="mt-4 text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
                Explore dashboards interativos com dados oficiais para analisar as tendências que marcam a economia.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {observatorios.map(obs => (
                <a 
                    href={obs.slug} 
                    class="group block p-8 rounded-2xl border bg-gray-50 dark:bg-gray-800/60 dark:border-gray-700 border-gray-200 
                           transition-all duration-300 shadow-sm hover:shadow-xl hover:border-primary dark:hover:border-primary hover:-translate-y-1"
                >
                    <Icon name={obs.icon} class="h-12 w-12 mb-5 text-primary" />
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white group-hover:text-primary transition-colors">{obs.titulo}</h3>
                    <p class="mt-3 text-gray-600 dark:text-gray-400">{obs.desc}</p>
                </a>
            ))}
        </div>
    </div>
</section>