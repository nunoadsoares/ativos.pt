---
interface Props {
    pontos: string[];
}
const { pontos } = Astro.props;
---
<div class="bg-white dark:bg-gray-800/50 p-6 sm:p-8 rounded-2xl shadow-lg border border-gray-200 dark:border-gray-700">
    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-5">Principais Vantagens</h3>
    <ul class="space-y-4">
        {pontos.map((ponto) => (
            <li class="flex items-start">
                <svg class="flex-shrink-0 w-7 h-7 text-primary mr-4 mt-0.5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-800 dark:text-gray-200 text-lg">{ponto}</span>
            </li>
        ))}
    </ul>
</div>
