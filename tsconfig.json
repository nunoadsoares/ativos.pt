{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    // ADICIONA ESTAS 3 LINHAS PARA CONFIGURAR O ATALHO '~/'
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    
    // O resto das tuas opções continua igual
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
